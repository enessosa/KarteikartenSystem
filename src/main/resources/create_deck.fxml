<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="12" alignment="CENTER_LEFT"
      prefWidth="420" prefHeight="180"
      xmlns="http://javafx.com/javafx/24"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="gui.CreateDeckController"
      styleClass="root-dark">

    <padding>
        <Insets top="18" right="18" bottom="18" left="18"/>
    </padding>

    <Label text="Neues Deck erstellen" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

    <Label text="Deck-Name:"/>
    <TextField fx:id="deckNameField" promptText="z.B. Java Basics"/>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Abbrechen" onAction="#onCancel"/>
        <Button fx:id="createButton" text="Erstellen" defaultButton="true" onAction="#onCreate"/>
    </HBox>

</VBox>