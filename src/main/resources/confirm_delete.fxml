<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="15"
      alignment="CENTER"
      prefWidth="400"
      prefHeight="180"
      xmlns="http://javafx.com/javafx/24"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="gui.ConfirmDeleteController"
      style="-fx-background-color: #1e1e1e;">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Sind Sie sich sicher, dass Sie das Deck löschen wollen?"
           wrapText="true"
           style="-fx-text-fill: white; -fx-font-size: 14px;"/>

    <Label text="Alle beinhalteten Karten werden ebenfalls gelöscht."
           wrapText="true"
           style="-fx-text-fill: #bbbbbb; -fx-font-size: 13px;"/>

    <HBox spacing="20" alignment="CENTER">
        <Button text="Ja"
                fx:id="yesButton"
                onAction="#onYes"
                style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-background-radius: 8;"/>

        <Button text="Nein"
                fx:id="noButton"
                onAction="#onNo"
                style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-background-radius: 8;"/>
    </HBox>

</VBox>