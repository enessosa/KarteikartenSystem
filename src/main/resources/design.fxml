<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity"
            nodeOrientation="LEFT_TO_RIGHT"
            prefHeight="700.0" prefWidth="1100.0"
            styleClass="root-dark"
            xmlns="http://javafx.com/javafx/24"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="gui.MainController">

    <children>

        <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

            <top>
                <MenuBar maxHeight="-Infinity" prefHeight="28.0" prefWidth="1100.0" BorderPane.alignment="CENTER">
                    <menus>
                        <Menu mnemonicParsing="false" text="Edit">
                            <items>
                                <MenuItem mnemonicParsing="false" text="Deck erstellen" onAction="#onCreateDeck"/>
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Help">
                            <items>
                                <MenuItem mnemonicParsing="false" text="About" onAction="#onAbout"/>
                            </items>
                        </Menu>
                    </menus>
                    <BorderPane.margin>
                        <Insets />
                    </BorderPane.margin>
                </MenuBar>
            </top>

            <left>
                <Pane prefHeight="672.0" prefWidth="320.0" BorderPane.alignment="CENTER_LEFT">
                    <children>

                        <Accordion prefHeight="672.0" prefWidth="320.0">

                            <panes>

                                <TitledPane animated="false" text="Decks">
                                    <content>
                                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="260.0" prefWidth="300.0">
                                            <children>
                                                <VBox spacing="8.0"
                                                      AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="10.0"
                                                      AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
                                                    <TextField fx:id="deckSearchField" promptText="Deck suchen…" onKeyReleased="#onDeckSearch"/>
                                                    <ListView fx:id="deckListView" prefHeight="170.0" />
                                                    <HBox spacing="8.0">
                                                        <Button mnemonicParsing="false" text="Neu" onAction="#onCreateDeck"/>
                                                        <Button mnemonicParsing="false" text="Umbenennen" onAction="#onRenameDeck"/>
                                                        <Button mnemonicParsing="false" text="Löschen" onAction="#onDeleteDeck"/>
                                                    </HBox>
                                                </VBox>
                                            </children>
                                        </AnchorPane>
                                    </content>
                                </TitledPane>

                                <TitledPane animated="false" text="Abfragen">
                                    <content>
                                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="260.0" prefWidth="300.0">
                                            <children>
                                                <VBox spacing="10.0"
                                                      AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="10.0"
                                                      AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">

                                                    <Label text="Aktives Deck:"/>
                                                    <HBox spacing="8.0">
                                                        <Label text="Deck:"/>
                                                        <ComboBox fx:id="chooseDeckForQuiz" prefWidth="300.0"/>
                                                    </HBox>

                                                    <Separator />

                                                    <Button fx:id="quizButton" text="Abfrage starten" onAction="#onStartQuiz" maxWidth="1.7976931348623157E308"/>

                                                    <Separator />
                                                </VBox>
                                            </children>
                                        </AnchorPane>
                                    </content>
                                </TitledPane>

                                <TitledPane animated="false" text="Karte hinzufügen">
                                    <content>
                                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="310.0" prefWidth="300.0">
                                            <children>
                                                <VBox spacing="8.0"
                                                      AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="10.0"
                                                      AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">

                                                    <Label text="Vorderseite:"/>
                                                    <TextArea fx:id="newFrontArea" prefRowCount="4" wrapText="true"
                                                              promptText="Frage / Vorderseite…"/>

                                                    <Label text="Rückseite:"/>
                                                    <TextArea fx:id="newBackArea" prefRowCount="4" wrapText="true"
                                                              promptText="Antwort / Rückseite…"/>

                                                    <HBox spacing="8.0">
                                                        <Label text="Deck:"/>
                                                        <ComboBox fx:id="chooseDeck" prefWidth="100.0"/>
                                                    </HBox>

                                                    <HBox spacing="8.0">
                                                        <Button fx:id="saveButton" text="Speichern" onAction="#onAddCard"/>
                                                    </HBox>



                                                </VBox>
                                            </children>
                                        </AnchorPane>
                                    </content>
                                </TitledPane>

                            </panes>
                        </Accordion>

                    </children>
                </Pane>
            </left>

            <center>
                <AnchorPane prefHeight="672.0" prefWidth="780.0" BorderPane.alignment="CENTER">
                    <children>

                        <VBox spacing="10.0"
                              AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0"
                              AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">

                            <Label text="Verwalten" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

                            <HBox spacing="8.0">
                                <TextField fx:id="cardSearchField" promptText="Karten suchen…" HBox.hgrow="ALWAYS" onKeyReleased="#onCardSearch"/>
                                <Button mnemonicParsing="false" text="Aktualisieren" onAction="#onRefreshCards"/>
                                <Button mnemonicParsing="false" text="Bearbeiten" onAction="#onEditCard"/>
                                <Button fx:id="deleteButton" text="Löschen" onAction="#onDeleteCard"/>
                            </HBox>

                            <TableView fx:id="cardsTable" prefHeight="540.0">
                                <columns>
                                    <TableColumn fx:id="colDeck" prefWidth="100.0" text="Deck"/>
                                    <TableColumn fx:id="colFront" prefWidth="240.0" text="Vorderseite"/>
                                    <TableColumn fx:id="colBack" prefWidth="300.0" text="Rückseite"/>
                                    <TableColumn fx:id="colLevel" prefWidth="120.0" text="Level"/>
                                </columns>
                            </TableView>

                            <Label fx:id="statusLabel" text="Bereit." />

                        </VBox>

                    </children>
                </AnchorPane>
            </center>

        </BorderPane>

    </children>
</AnchorPane>