<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="12"
      prefWidth="520" prefHeight="420"
      xmlns="http://javafx.com/javafx/24"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="gui.EditCardController"
      styleClass="root-dark">

    <padding>
        <Insets top="16" right="16" bottom="16" left="16"/>
    </padding>

    <Label text="Karte bearbeiten" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <Separator/>

    <VBox spacing="6">
        <Label text="Deck"/>
        <ComboBox fx:id="deckBox" prefWidth="150" promptText="Deck auswählen…"/>
    </VBox>

    <VBox spacing="6">
        <Label text="Level"/>
        <ComboBox fx:id="levelBox" prefWidth="150" promptText="Level auswählen…"/>
    </VBox>

    <VBox spacing="6">
        <Label text="Vorderseite"/>
        <TextArea fx:id="frontArea" wrapText="true" prefRowCount="5" promptText="Vorderseite…"/>
    </VBox>

    <VBox spacing="6">
        <Label text="Rückseite"/>
        <TextArea fx:id="backArea" wrapText="true" prefRowCount="5" promptText="Rückseite…"/>
    </VBox>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="cancelButton" text="Abbrechen" onAction="#onCancel"/>
        <Button fx:id="saveButton" text="Speichern" defaultButton="true" onAction="#onSave"/>
    </HBox>

</VBox>